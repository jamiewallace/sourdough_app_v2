.box-css.col-md-4
  %h1 Sign up as a Member!
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :username
      = f.text_field :username, :autofocus => true, class: "form-control"
    .form-group
      = f.label :first_name
      = f.text_field :first_name, class: "form-control"
    .form-group
      = f.label :last_name
      = f.text_field :last_name, class: "form-control"
    .form-group
      = f.label :avatar
      = f.file_field :avatar, class: "form-control"
    .form-group
      = f.label :have_need, 'Select one of the following'
      = f.select :have_need,['have', 'need'], class: "form-control"
    .form-group
      = f.label :first_line_address
      = f.text_field :first_line_address, class: "form-control"
    .form-group
      = f.label :second_line_address
      = f.text_field :second_line_address, class: "form-control"
    .form-group
      = f.label :town_city
      = f.text_field :town_city, class: "form-control"
    .form-group
      = f.label :postcode
      = f.text_field :postcode, class: "form-control"
    .form-group
      = f.label :country
      = f.text_field :country, class: "form-control"
    .form-group
      = f.label :description
      = f.text_field :description, class: "form-control"
    .form-group
      = f.label :email
      = f.email_field :email, class: "form-control"
    .form-group
      = f.label :password
      = f.password_field :password, class: "form-control"
    .form-group
      = f.label :password_confirmation
      = f.password_field :password_confirmation, class: "form-control"
    - if @ref_user_id
      .form-group
        = hidden_field_tag :ref_user_id, @ref_user_id
    .form-group= f.submit "Sign up", class: "form-control"
